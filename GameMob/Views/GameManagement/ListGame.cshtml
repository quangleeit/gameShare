@using PagedList;
@using PagedList.Mvc;

@model PagedList.PagedList<GameMob.Models.Game>

@{
    Layout = null;
}
<link href="~/Content/CssAdmin/Table/jquery.dataTables.css" rel="stylesheet" />

<div style="width: 13%; text-align:center">
    <a href="@Url.Action("CreateNewGame", "GameManagement")" class="btn btn-block ink-reaction btn-lg btn-primary">Create New</a>
</div>
<div class="spacer"></div>
<table id="datatable1" class="table table-striped table-hover dataTable no-footer" role="grid" aria-describedby="datatable1_info">
    <thead>
        <tr role="row">
            
            <th class="sorting" tabindex="0" aria-controls="datatable1" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" style="width: 212px;">
                <h4><b>Tên Game</b></h4>
            </th>
            <th class="sorting" tabindex="0" aria-controls="datatable1" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" style="width: 212px;">
                <strong>Game Series</strong>   
            </th>
            <th class="sorting" tabindex="0" aria-controls="datatable1" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" style="width: 212px;">
                <strong>Company</strong>
            </th>
            <th class="sorting" tabindex="0" aria-controls="datatable1" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" style="width: 212px;">
                <strong>Mô tả</strong>
            </th>
            <th class="sorting" tabindex="0" aria-controls="datatable1" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" style="width: 212px;">
                <strong>Link</strong>
            </th>
            <th class="sorting" tabindex="0" aria-controls="datatable1" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" style="width: 212px;">
                <strong>Ảnh bìa</strong>
            </th>
            <th class="sorting" tabindex="0" aria-controls="datatable1" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" style="width: 212px;">
                <strong>Năm sản xuất</strong>
            </th>
            <th class="sorting" tabindex="0" aria-controls="datatable1" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" style="width: 212px;">
                <strong>Lượt Download</strong>
            </th>
            <th class="sorting" tabindex="0" aria-controls="datatable1" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" style="width: 212px;">
                <strong>Điểm MetaCritic</strong>
            </th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="gradeX odd" role="row">

                <td>
                    @Html.DisplayFor(modelItem => item.nameGame)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SeriesGame.nameSeries)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nhaSanXuat.nameNhaSX)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.describeGame)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.linkDownload)
                </td>
                <td>
                    <img  src="~/IMG/poster/@Html.DisplayFor(modelItem => item.poster) " height="90" width="64" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.namSX)
                </td>
                <td>
                     @Html.DisplayFor(modelItem => item.luotDownLoad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.pointOfCritic)
                </td>
                <td>
                    <a role="button" href="#" class="btn btn-block ink-reaction btn-xs btn-info">Details</a>
                </td>
                <td>      <a role="button" href="@Url.Action("Edit", "GameManagement", new {@id = item.idGame})" class="btn btn-block ink-reaction btn-xs btn-warning">Edit</a>
                     
                </td>
                <td>
                    <a role="button" href="@Url.Action("Delete", "GameManagement", new { @id = item.idGame })" class="btn btn-block ink-reaction btn-xs btn-danger">Delete</a>
                    @*<button class="btn btn-default-bright btn-raised" data-toggle="modal" data-target="#simpleModal">Delete</button>*@

                    @*<div class="modal fade" id="simpleModal" tabindex="-1" role="dialog" aria-labelledby="simpleModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                    <h4 class="modal-title" id="simpleModalLabel">Xóa Game</h4>
                                </div>
                                <div class="modal-body">
                                    <p>Bạn muốn xóa Game này?</p>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                    
                                    <a role="button" href="@Url.Action("Delete", "GameManagement", new { @id = item.idGame })" class="btn btn-danger">Delete</a>
                                </div>
                            </div><!-- /.modal-content -->
                        </div><!-- /.modal-dialog -->
                    </div>*@
                </td>

            </tr>
    
        }
    </tbody>
</table>


<div>@Html.PagedListPager(Model, page => Url.Action("Game", "Admin", new { page = page }))</div>



