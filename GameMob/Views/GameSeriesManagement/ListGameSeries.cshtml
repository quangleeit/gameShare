@using PagedList;
@using PagedList.Mvc;

@model PagedList.PagedList<GameMob.Models.SeriesGame>
@{
    ViewBag.Title = "ListGameSeries";

}

<link href="~/Content/CssAdmin/Table/jquery.dataTables.css" rel="stylesheet" />

<div style="width: 13%; text-align:center">
    <a href="@Url.Action("CreateNewGameSeries", "GameSeriesManagement")" class="btn btn-block ink-reaction btn-lg btn-primary">Create New</a>
</div>
<div class="spacer"></div>
<div class="col-md-6">
    <table id="datatable1" class="table table-striped table-hover dataTable no-footer" role="grid" aria-describedby="datatable1_info">
        <thead>
            <tr role="row">

                <th class="sorting" tabindex="0" aria-controls="datatable1" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" style="width: 212px;">
                    <h4><b>Tên Game Series</b></h4>
                </th>
                <th class="sorting" tabindex="0" aria-controls="datatable1" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" style="width: 212px;">
                    <h4><b>Ảnh bìa</b></h4>
                </th>
                <th></th>
                <th></th>


            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="gradeX odd" role="row">

                    <td>
                        @Html.DisplayFor(modelItem => item.nameSeries)
                    </td>

                    <td>
                        <img src="~/IMG/imgSeries/@Html.DisplayFor(modelItem => item.imgSeries) " height="120" width="85" />
                    </td>

                   
                        <td>
                            <a role="button" href="@Url.Action("Edit", "GameSeriesManagement", new {@id = item.idSeries})" class="btn btn-block ink-reaction btn-xs btn-warning">Edit</a>

                        </td>
                        <td><a role="button" href="@Url.Action("Delete", "GameSeriesManagement", new { @id = item.idSeries })" class="btn btn-block ink-reaction btn-xs btn-danger">Delete</a>
